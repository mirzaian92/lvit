---
import SEO from "@/components/SEO.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import SchemaSitewide from "@/components/SchemaSitewide.astro";
import StickyCTA from "@/components/StickyCTA.astro";
import "@/styles/global.css";

type Props = {
  title: string;
  description: string;
  canonical: string;
  noindex?: boolean;
  jsonLd?: unknown[];
};

const { title, description, canonical, noindex, jsonLd } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO title={title} description={description} canonical={canonical} noindex={noindex} jsonLd={jsonLd} />
    <SchemaSitewide />
  </head>
  <body class="min-h-screen bg-brand-bg text-brand-text antialiased">
    <a
      href="#main"
      class="focus-ring sr-only absolute left-4 top-4 z-50 rounded bg-white px-3 py-2 text-sm font-semibold text-brand-primary"
    >
      Skip to content
    </a>
    <Header />
    <main id="main" class="mx-auto w-full max-w-6xl px-4 py-10">
      <slot />
    </main>
    <Footer />
    <StickyCTA />
  </body>
</html>

